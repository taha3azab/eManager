@model eManager.Domains.Department

@{
    ViewBag.Title = "Detail";
}

<h2>@Model.Name</h2>

@Html.ActionLink("Add new employee", "Create", "Employee", new { departmentId = Model.Id }, null)

<table>
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@employee.Name</td>
        </tr>
    }

</table>
